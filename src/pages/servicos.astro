---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/before-after.avif";
import constructionWorkers from "@images/construction-workers.avif";
import aerialView from "@images/aerial-view.avif";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Orientação Especializada em Obras e Reparos",
    subTitle:
      "Iniciar um projeto de construção ou reparo pode ser desafiador. Com nossos serviços de consultoria profissional, guiamos você em cada etapa, garantindo que tome decisões informadas. Seja você um entusiasta do faça-você-mesmo ou um empreiteiro experiente, nossos especialistas oferecem orientações personalizadas sobre seleção de materiais, escopo do projeto e conformidade com normas locais.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Plantas arquitetônicas e tablet digital com planos de construção.",
    imgTwo: personWorking,
    imgTwoAlt: "Profissional trabalhando em um escritório de engenharia",
  },
  {
    isRightSection: false,
    title: "Transformando Projetos em Realidade",
    subTitle:
      "Nossos profissionais qualificados trazem precisão e excelência para cada projeto de construção. Desde pequenas instalações até reformas estruturais significativas, a PH Garcia Reparos oferece serviços confiáveis para transformar seus planos em realidade. Trabalhamos com os mais altos padrões de segurança e qualidade, utilizando materiais de primeira linha e ferramentas especializadas.",
    img: beforeAfter,
    imgAlt: "Local de construção antes e depois da reforma",
    btnExists: true,
    btnTitle: "Saiba Mais",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Gestão Profissional para Obras Bem-Sucedidas",
    subTitle:
      "A gestão eficiente do projeto é essencial para o sucesso da obra. A PH Garcia Reparos oferece um planejamento detalhado e serviços de gerenciamento robustos para garantir que seu projeto seja concluído dentro do prazo e do orçamento. Cuidamos da coordenação de equipes, alocação de recursos e comunicação entre as partes envolvidas, permitindo que você foque no seu objetivo final.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "Trabalhadores da construção coordenando um projeto",
    imgTwo: aerialView,
    imgTwoAlt: "Vista aérea de um canteiro de obras em andamento",
  },
  {
    isRightSection: false,
    title: "Garantindo Durabilidade e Qualidade",
    subTitle:
      "Nosso compromisso com seu projeto não termina na entrega. A PH Garcia Reparos oferece serviços contínuos de manutenção e suporte para garantir a longevidade e o desempenho da sua construção. Desde inspeções regulares até atendimentos emergenciais, nossa equipe está sempre disponível para garantir que sua estrutura permaneça segura e eficiente.",
    img: usingTools,
    imgAlt:
      "Profissional com colete laranja e preto, usando capacete branco e ferramenta elétrica",
  },
  {
    isRightSection: true,
    title: "Soluções Personalizadas para Grandes Projetos",
    subTitle:
      "Para clientes corporativos e grandes empreendimentos, a PH Garcia Reparos desenvolve soluções sob medida para atender desafios específicos do setor. Compreendendo as necessidades exclusivas do seu negócio, criamos estratégias eficientes para otimizar operações, aumentar a produtividade e garantir excelência em cada etapa do projeto.",
    single: false,
    imgOne: progressBuilding,
    imgOneAlt: "Estrutura de edifício em construção",
    imgTwo: underConstruction,
    imgTwoAlt: "Prédio marrom e cinza em fase de construção",
    btnExists: true,
    btnTitle: "Leia Mais",
    btnURL: "#",
  },
];

const pageTitle: string = `Services | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://phgarcia.com.br/servicos",
    "url": "https://phgarcia.com.br/servicos",
    "name": "Obras e Reparos em Curitiba | PH Garcia Reparos",
    "description": "Unindo expertise à sua visão, a PH Garcia Reparos oferece serviços excepcionais e soluções completas no setor de construção e hardware, desde a consultoria até a conclusão do projeto.",
    "isPartOf": {
        "@type": "WebSite",
        "url": "https://phgarcia.com.br",
        "name": "PH Garcia Reparos",
        "description": "A PH Garcia Reparos oferece ferramentas de hardware de alta qualidade e serviços especializados de construção para atender a todas as necessidades do seu projeto."
    },
    "inLanguage": "pt-BR"
  }}
>
  <MainSection
  title="Unindo Expertise à Sua Visão"
  subTitle="Na PH Garcia Reparos, temos orgulho em oferecer soluções completas e um serviço excepcional no setor de hardware e construção. Nossa equipe experiente está dedicada a apoiar seu projeto do início ao fim com uma variedade de serviços especializados."
  btnExists={true}
  btnTitle="Agende uma Consultoria"
  btnURL="#"
  />
  {
  articles.map(article => {
    return article.isRightSection ? (
      <RightSection
        title={article.title}
        subTitle={article.subTitle}
        single={article.single}
        imgOne={article.imgOne}
        imgOneAlt={article.imgOneAlt}
        imgTwo={article.imgTwo}
        imgTwoAlt={article.imgTwoAlt}
        btnExists={article.btnExists}
        btnTitle={article.btnTitle}
        btnURL={article.btnURL}
      />
    ) : (
      <LeftSection
        title={article.title}
        subTitle={article.subTitle}
        img={article.img}
        imgAlt={article.imgAlt}
        btnExists={article.btnExists}
        btnTitle={article.btnTitle}
        btnURL={article.btnURL}
      />
    );
  })
  }
  <FeaturesStats
  title="Nossos Números"
  subTitle="Nosso compromisso com a qualidade e confiabilidade é evidente em cada projeto que realizamos. Na PH Garcia Reparos, estamos dedicados a fornecer serviços líderes do setor para garantir que seus projetos de construção sejam feitos para durar."
  mainStatTitle="96%"
  mainStatSubTitle="dos nossos clientes classificam sua experiência com a PH Garcia Reparos como excepcional"
  stats={[
    {
      stat: "99.8%",
      description: "taxa de conclusão de projetos",
    },
    {
      stat: "5.000+",
      description: "instalações bem-sucedidas",
    },
    {
      stat: "85%",
      description: "crescimento de clientes ano após ano",
    },
  ]}
/>
</MainLayout>
