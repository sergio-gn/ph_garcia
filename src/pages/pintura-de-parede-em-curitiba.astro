---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/torneira.jpg";
import personWorking from "@images/torneira2.png";
import pintura from "@images/pintura.jpg";
import pinturaCorredor from "@images/pintura_corredor.jpg";
import pinturaPh from "@images/ph_garcia_pintura.png";
import constructionWorkers from "@images/ar-condicionado1.jpg";
import aerialView from "@images/ar_condicionado_depois.jpg";
import usingTools from "@images/pintura_corredor.jpg";
import progressBuilding from "@images/piso_antes.png";
import underConstruction from "@images/piso_depois.png";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
    {
    isRightSection: false,
    title: "Por que a pintura profissional faz toda a diferença no seu imóvel",
    subTitle:
      "Quando pensamos em renovar um ambiente, a pintura de parede em Curitiba é, sem dúvida, uma das formas mais eficientes e econômicas de transformar completamente qualquer espaço. Como pedreiro e pintor profissional atuando há mais de 15 anos na capital paranaense, posso afirmar com propriedade: uma pintura bem executada não apenas embeleza, mas também protege e valoriza seu imóvel.",
    img: pintura,
    imgAlt: "Parede pintura com nicho circular",
    btnExists: true,
    btnTitle: "Chama o PH no WhatsApp",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Serviços de pintura residencial: muito além da estética",
    subTitle:
      "A pintura de uma residência não é apenas uma questão estética. Um trabalho de pintura de parede profissional em Curitiba cumpre várias funções essenciais:",
    imgOne: pinturaCorredor,
    imgOneAlt: "Local de construção antes e depois da reforma",
    imgTwo: pinturaPh,
    imgTwoAlt: "Vista aérea de um canteiro de obras em andamento",
  },
  {
    isRightSection: false,
    title: "Minha história com a pintura em Curitiba",
    subTitle:
      "Antes de me especializar em pintura residencial na região de Curitiba, comecei como auxiliar de obras. Foi observando os mestres pintores que percebi como uma parede bem preparada e pintada transformava completamente o ambiente. Lembro-me do meu primeiro trabalho solo, um apartamento no bairro Água Verde. A dona, Dona Margarida, estava cética quanto à possibilidade de renovar o imóvel sem grandes reformas.",
    single: false,
    img: pintura,
    imgAlt: "Parede pintura com nicho circular",
  },
  {
    isRightSection: false,
    title: "Garantindo Durabilidade e Qualidade",
    subTitle:
      "Nosso compromisso com seu projeto não termina na entrega. Todos os projetos são feitos pensados na Durabilidade.",
    img: usingTools,
    imgAlt:
      "Profissional com colete laranja e preto, usando capacete branco e ferramenta elétrica",
  },
  {
    isRightSection: true,
    title: "Instalação de Pisos",
    subTitle:
      "Para clientes corporativos e grandes empreendimentos, a PH Garcia Reparos desenvolve soluções sob medida para atender desafios específicos do setor. Compreendendo as necessidades exclusivas do seu negócio, criamos estratégias eficientes para otimizar operações, aumentar a produtividade e garantir excelência em cada etapa do projeto.",
    single: false,
    imgOne: progressBuilding,
    imgOneAlt: "Estrutura de edifício em construção",
    imgTwo: underConstruction,
    imgTwoAlt: "Prédio marrom e cinza em fase de construção",
    btnExists: true,
    btnTitle: "Leia Mais",
    btnURL: "#",
  },
];

const pageTitle: string = `Pintura de Paredes em Curitiba | ${SITE.title}`;


---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://phgarcia.com.br/pintura-de-parede-em-curitiba",
    "url": "https://phgarcia.com.br/pintura-de-parede-em-curitiba",
    "name": "Obras e Reparos em Curitiba | PH Garcia Reparos",
    "description": "Unindo expertise à sua visão, a PH Garcia Reparos oferece serviços excepcionais e soluções completas no setor de construção e hardware, desde a consultoria até a conclusão do projeto.",
    "isPartOf": {
        "@type": "WebSite",
        "url": "https://phgarcia.com.br",
        "name": "PH Garcia Reparos",
        "description": "A PH Garcia Reparos oferece ferramentas de hardware de alta qualidade e serviços especializados de construção para atender a todas as necessidades do seu projeto."
    },
    "inLanguage": "pt-br"
  }}
>
  <MainSection
  title="Pintura de Parede em Curitiba: Transforme sua Residência com Qualidade e Profissionalismo"
  subTitle="Serviços de pintura residencial com garantia e acabamento impecável para sua casa, apartamento ou escritório em Curitiba e região metropolitana."
  btnExists={true}
  btnTitle="Chama o PH no WhatsApp!"
  btnURL="https://wa.me//5541999843157?text=Preciso%20de%20um%20or%C3%A7amento"
  />

  {
  articles.map(article => {
    return article.isRightSection ? (
      <RightSection
        title={article.title}
        subTitle={article.subTitle}
        single={article.single}
        imgOne={article.imgOne}
        imgOneAlt={article.imgOneAlt}
        imgTwo={article.imgTwo}
        imgTwoAlt={article.imgTwoAlt}
        btnExists={article.btnExists}
        btnTitle={article.btnTitle}
        btnURL={article.btnURL}
      />
    ) : (
      <LeftSection
        title={article.title}
        subTitle={article.subTitle}
        img={article.img}
        imgAlt={article.imgAlt}
        btnExists={article.btnExists}
        btnTitle={article.btnTitle}
        btnURL={article.btnURL}
      />
    );
  })
  }
</MainLayout>